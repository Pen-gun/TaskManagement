@page
@model TaskManagementv2.Pages.Employee.EditModel
@{
    ViewData["Title"] = "Edit Task";
}

<h1>@ViewData["Title"]</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Taasks.TaskId" />
            <div class="form-group">
                <label asp-for="Taasks.Title" class="control-label"></label>
                <input asp-for="Taasks.Title" class="form-control" readonly/>
                <span asp-validation-for="Taasks.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taasks.Description" class="control-label"></label>
                <input asp-for="Taasks.Description" class="form-control" readonly />
                <span asp-validation-for="Taasks.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taasks.Priority" class="control-label"></label>
                <input asp-for="Taasks.Priority" class="form-control" readonly/>
                <span asp-validation-for="Taasks.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taasks.Deadline" class="control-label"></label>
                <input asp-for="Taasks.Deadline" class="form-control" readonly/>
                <span asp-validation-for="Taasks.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taasks.AssignedTo" class="control-label"></label>
                <input asp-for="Taasks.AssignedTo" class="form-control" readonly/>
                <span asp-validation-for="Taasks.AssignedTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taasks.Status" class="control-label"></label>
                <select asp-for="Taasks.Status" class="form-control" />
                <option value="Not Started">Not Started</option>
                <option value="Pending">Pending</option>
                <option value="In-Progress">In Progress</option>
                <option value="Completed">Completed</option>
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
