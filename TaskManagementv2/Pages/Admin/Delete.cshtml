@page "{id:int}"
@model TaskManagementv2.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <h4>Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Taasks.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Taasks.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Taasks.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Taasks.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Taasks.Deadline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Taasks.Deadline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Taasks.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Taasks.Status)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Taasks.TaskId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./taasks" class="btn btn-secondary">Cancel</a>
    </form>
</div>
