@page
@model TaskManagementv2.Pages.Admin.CreateModel
@{
    ViewData["Title"] = "Create New Task";
}

<h1>@ViewData["Title"]</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Taasks.Title" class="control-label"></label>
                <input asp-for="Taasks.Title" class="form-control" />
                <span asp-validation-for="Taasks.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taasks.Description" class="control-label"></label>
                <input asp-for="Taasks.Description" class="form-control" />
                <span asp-validation-for="Taasks.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taasks.Priority" class="control-label"></label>
                <select asp-for="Taasks.Priority" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
                <span asp-validation-for="Taasks.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taasks.Deadline" class="control-label"></label>
                <input asp-for="Taasks.Deadline" class="form-control" />
                <span asp-validation-for="Taasks.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taasks.AssignedTo" class="control-label"></label>
                <input asp-for="Taasks.AssignedTo" class="form-control" />
                <span asp-validation-for="Taasks.AssignedTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taasks.Status" class="control-label"></label>
                <select asp-for="Taasks.Status" class="form-control" />
				<option value="Not Started">Not Started</option>
				<option value="Pending">Pending</option>
				<option value="In-Progress">In Progress</option>
				<option value="Completed">Completed</option>
                </select>

                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
